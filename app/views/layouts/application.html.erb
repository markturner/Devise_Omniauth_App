<!DOCTYPE html>
<html>
<head>
  <title>Junket</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  
  <div id="user_nav">
	  <% if user_signed_in? %>
	    Signed in as <%= link_to (current_user.name or current_user.email), account_path %>. Not you?
	    <%= link_to "Log out", logout_path %>
	  <% else %>
	    <%= link_to "Register", register_path %> or <%= link_to "log in", login_path %>
	  <% end %>
	</div>
  
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  
  <%= yield %>

</body>
</html>
